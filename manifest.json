{
  "name": "Event Spy",
  "version": "0.4.6",
  "manifest_version": 2,
  "description": "Spy on the events listened for on a page",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "tabs"
  ],
  "devtools_page": "eventspy.html",
  "background": { 
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["jquery.js", "main.js"],
      "css": ["style.css"]
    }
  ]
}
